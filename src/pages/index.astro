---
import Layout from '../layouts/Layout.astro';
import DestinationSection from '../components/DestinationSection.astro';
import { destinations } from '../data/flights';
---

<Layout>
	<header class="mb-10 max-w-3xl mx-auto">
		<h1 class="text-2xl font-bold text-foreground mb-2">Kristóf diplomás út</h1>
		<p class="text-muted-foreground">
			Budapest indulású repülőjáratok összehasonlítása célállomások szerint.
		</p>
	</header>
	{destinations.map((destination, index) => (
		<DestinationSection destination={destination} index={index} />
	))}
</Layout>
