---
import '../../globals.css';
import ThemeToggle from '../components/ThemeToggle.astro';
---
<!doctype html>
<html lang="hu">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<script is:inline>
			(function() {
				var theme = localStorage.getItem('theme');
				var isDark = theme === 'dark' || ((!theme || theme === 'system') && window.matchMedia('(prefers-color-scheme: dark)').matches);
				document.documentElement.classList.toggle('dark', isDark);
			})();
		</script>
		<meta name="description" content="Járatszerkesztő – Budapest indulású repülőjáratok összehasonlítása célállomások szerint." />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Kristóf trip</title>
	</head>
	<body>
		<header class="layout-header">
			<ThemeToggle client:load />
		</header>
		<main class="layout-main">
			<slot />
		</main>
		<script is:inline>
			function applyPriceBlur() {
				var params = new URLSearchParams(window.location.search);
				var els = document.querySelectorAll('[data-price-blur]');
				els.forEach(function (el) {
					el.classList.toggle('price-blur-wrapper', params.get('type') === 'hidden');
				});
			}
			document.addEventListener('DOMContentLoaded', applyPriceBlur);
			window.addEventListener('popstate', applyPriceBlur);
		</script>
	</body>
</html>

<style>
	/* Price blur: must live in layout so it's always present when the inline script adds .price-blur-wrapper (fixes production deploy) */
	:global(.price-blur-wrapper) {
		position: relative;
		filter: blur(6px);
		user-select: none;
		pointer-events: none;
	}
	html {
		box-sizing: border-box;
	}
	*,
	*::before,
	*::after {
		box-sizing: inherit;
	}
	html,
	body {
		margin: 0;
		min-height: 100%;
		width: 100%;
	}
	.layout-header {
		max-width: 72rem;
		margin: 0 auto;
		padding: 1rem 1rem 0;
		display: flex;
		justify-content: flex-end;
	}
	.layout-main {
		max-width: 72rem;
		margin: 0 auto;
		padding: 1.5rem 1rem 3rem;
	}
	@media (min-width: 640px) {
		.layout-main {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}
	}
</style>
