<div class="theme-toggle flex items-center gap-0.5 rounded-lg border border-input bg-muted/50 p-0.5" role="group" aria-label="Téma">
	<button
		type="button"
		class="theme-option flex h-8 w-8 items-center justify-center rounded-md text-muted-foreground transition-colors hover:bg-background hover:text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:ring-offset-background data-active:bg-background data-active:text-foreground data-active:shadow-sm"
		data-theme="system"
		aria-label="Rendszer"
		title="Rendszer"
	>
		<!-- iOS-style display/monitor icon -->
		<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
			<rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
			<line x1="8" y1="21" x2="16" y2="21"/>
			<line x1="12" y1="17" x2="12" y2="21"/>
		</svg>
	</button>
	<button
		type="button"
		class="theme-option flex h-8 w-8 items-center justify-center rounded-md text-muted-foreground transition-colors hover:bg-background hover:text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:ring-offset-background data-active:bg-background data-active:text-foreground data-active:shadow-sm"
		data-theme="light"
		aria-label="Világos"
		title="Világos"
	>
		<!-- iOS-style sun icon -->
		<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
			<circle cx="12" cy="12" r="4"/>
			<line x1="12" y1="2" x2="12" y2="4"/>
			<line x1="12" cy="20" x2="12" y2="22"/>
			<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
			<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
			<line x1="2" y1="12" x2="4" y2="12"/>
			<line x1="20" y1="12" x2="22" y2="12"/>
			<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
			<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
		</svg>
	</button>
	<button
		type="button"
		class="theme-option flex h-8 w-8 items-center justify-center rounded-md text-muted-foreground transition-colors hover:bg-background hover:text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:ring-offset-background data-active:bg-background data-active:text-foreground data-active:shadow-sm"
		data-theme="dark"
		aria-label="Sötét"
		title="Sötét"
	>
		<!-- iOS-style moon icon -->
		<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
			<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
		</svg>
	</button>
</div>

<script>
	const buttons = document.querySelectorAll('.theme-option');
	const getEffectiveTheme = () => {
		const stored = localStorage.getItem('theme');
		if (stored === 'light' || stored === 'dark') return stored;
		return 'system';
	};

	function setActiveButton() {
		const active = getEffectiveTheme();
		buttons.forEach((btn) => {
			btn.removeAttribute('data-active');
			if (btn.getAttribute('data-theme') === active) btn.setAttribute('data-active', '');
		});
	}

	function applyTheme(value) {
		localStorage.setItem('theme', value);
		const isDark = value === 'dark' || (value === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches);
		document.documentElement.classList.toggle('dark', isDark);
		setActiveButton();
	}

	setActiveButton();

	buttons.forEach((btn) => {
		btn.addEventListener('click', () => {
			const value = btn.getAttribute('data-theme');
			if (value) applyTheme(value);
		});
	});

	window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
		if (localStorage.getItem('theme') === 'system') {
			const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
			document.documentElement.classList.toggle('dark', isDark);
		}
	});
</script>
